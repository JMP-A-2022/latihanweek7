<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/calendar"
        android:layout_width="450dp"
        android:layout_height="415dp"
        android:src="@drawable/bg_home"
        android:layout_marginTop="-30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#313131"
        android:text="Welcome Back"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/calendar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="140dp"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/montserrat_bold"
        />

    <TextView
        android:id="@+id/sub_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#313131"
        android:layout_marginRight="100dp"
        android:text="at largest Servies marketplace"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/montserrat_bold"
        />

    <TextView
        android:id="@+id/sub_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9c9c9c"
        android:layout_marginRight="250dp"
        android:text="Enter as a"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/montserrat_bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:background="#e93f3f"
        android:text="User"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:id="@+id/user_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_btn"
        android:onClick="postChangePassword"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/no_border"
        android:text="Service Provider"
        android:textColor="#e93f3f"
        android:textAllCaps="false"
        android:id="@+id/service_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_btn"
        android:onClick="postChangePassword"
        />

    <TextView
        android:id="@+id/txt_enter_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9c9c9c"
        android:text="Enter as a guest"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/service_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/montserrat_bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>