<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/calendar"
        android:layout_width="420dp"
        android:layout_height="400dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/bg_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#313131"
        android:text="Continuing as"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/calendar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="140dp"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/montserrat_bold"
        />

    <TextView
        android:id="@+id/sub_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#313131"
        android:layout_marginRight="100dp"
        android:text="Service Provider"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/montserrat_bold"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginRight="170dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textAllCaps="false"
        android:background="@drawable/no_border"
        android:textColor="#e93f3f"
        android:id="@+id/login_btn"
        app:layout_constraintEnd_toEndOf="@id/register_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_welcome"
        android:onClick="postChangePassword"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="Register"
        android:background="#e93f3f"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/register_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_welcome"
        android:onClick="postChangePassword"
        />

    <Button
        android:id="@+id/google_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/no_border"
        android:drawableLeft="@drawable/ic_google"
        android:onClick="postChangePassword"
        android:text="Continue with Google"
        android:textAllCaps="false"
        android:textColor="#e93f3f"
        android:drawablePadding="2dip"
        android:paddingLeft="15dip"
        android:paddingRight="26dip"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_btn" />

    <Button
        android:id="@+id/facebook_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/no_border_blue"
        android:drawableLeft="@drawable/ic_facebook"
        android:onClick="postChangePassword"
        android:text="Continue with Facebook"
        android:textAllCaps="false"
        android:textColor="#7388AC"
        android:textSize="18sp"
        android:drawablePadding="2dip"
        android:paddingLeft="17dip"
        android:paddingRight="26dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/google_btn" />


    <TextView
        android:id="@+id/txt_enter_guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9c9c9c"
        android:text="Enter as a guest"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/facebook_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/montserrat_bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>